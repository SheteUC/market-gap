{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": false,
    "noEmit": false,
    "outDir": "./dist"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2020"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".next", "dist"]
} 